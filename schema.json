{
  "properties": {
    "servers": {
      "type": "array",
      "items": {
        "properties": {
          "url": {
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "url"
        ]
      }
    },
    "openrpc": {
      "type": "string"
    },
    "methods": {
      "type": "array",
      "items": {
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "result": {
            "anyOf": [
              {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/contentDescriptor"
                }
              },
              {
                "$ref": "#/definitions/contentDescriptor"
              }
            ]
          },
          "params": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/contentDescriptor"
            }
          },
          "links": {
            "$ref": "#/definitions/link"
          }
        },
        "type": "object",
        "required": [
          "name",
          "result"
        ]
      }
    },
    "components": {
      "properties": {
        "schemas": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/schema"
            }
          }
        },
        "links": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/link"
            }
          }
        },
        "examples": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/examples"
            }
          }
        },
        "errors": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/error"
            }
          }
        },
        "contentDescriptors": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/contentDescriptor"
            }
          }
        }
      },
      "type": "object"
    },
    "info": {
      "properties": {
        "version": {
          "type": "string"
        },
        "contact": {
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "title": {
          "type": "string"
        },
        "license": {
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "description": {
          "type": "string"
        },
        "termsOfService": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "title",
        "version"
      ]
    }
  },
  "type": "object",
  "required": [
    "info",
    "methods",
    "openrpc"
  ],
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "schema": {
      "$ref": "http://json-schema.org/draft-07/schema#"
    },
    "externalDocs": {
      "type": "object",
      "additionalProperties": false,
      "description": "information about external documentation",
      "required": [
        "url"
      ],
      "properties": {
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      },
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/vendorExtension"
        }
      }
    },
    "examples": {
      "type": "array",
      "items": {
        "properties": {
          "summary": {
            "type": "string"
          },
          "value": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "object"
              },
              {
                "type": "array"
              }
            ]
          },
          "description": {
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        },
        "type": "object",
        "required": [
          "name",
          "value"
        ]
      }
    },
    "error": {
      "type": "object"
    },
    "link": {
      "type": "object",
      "properties": {
        "[0-z]+": {
          "properties": {
            "$ref": {
              "type": "string"
            }
          },
          "type": "object",
          "required": [
            "$ref"
          ]
        }
      }
    },
    "vendorExtension": {
      "description": "Any property starting with x- is valid.",
      "additionalItems": true,
      "additionalProperties": true
    },
    "contentDescriptor": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "schema": {
          "$ref": "#/definitions/schema"
        },
        "examples": {
          "oneOf": [
            {
              "$ref": "#/definitions/examples"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/examples"
              }
            }
          ]
        }
      }
    }
  }
}
