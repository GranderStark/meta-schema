{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "info",
    "methods",
    "openrpc"
  ],
  "additionalProperties": false,
  "properties": {
    "openrpc": {
      "type": "string",
      "enum": [
        "1.0.0-rc0"
      ]
    },
    "info": {
      "$ref": "#/definitions/info"
    },
    "servers": {
      "$ref": "#/definitions/servers"
    },
    "methods": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "result"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "paramStructure": {
            "type": "string",
            "enum": [
              "by-position",
              "by-name"
            ],
            "default": "by-position"
          },
          "result": {
            "$ref": "#/definitions/contentDescriptor"
          },
          "params": {
            "oneOf": [
              {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/contentDescriptor"
                }
              },
              {
                "$ref": "#/definitions/referenceObject"
              }
            ]
          },
          "links": {
            "$ref": "#/definitions/links"
          }
        }
      }
    },
    "components": {
      "type": "object",
      "properties": {
        "schemas": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/schema"
            }
          }
        },
        "links": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/link"
            }
          }
        },
        "examples": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/examples"
            }
          }
        },
        "errors": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/error"
            }
          }
        },
        "contentDescriptors": {
          "type": "object",
          "patternProperties": {
            "[0-z]+": {
              "$ref": "#/definitions/contentDescriptor"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "schema": {
      "$ref": "https://json-schema.org/draft-07/schema#",
      "type": "object",
      "default": {}
    },
    "referenceObject": {
      "type": "object",
      "required": [ "$ref" ],
      "properties": {
        "$ref": {
          "type": "string",
          "format": "uri-reference"
        }
      }
    },
    "vendorExtensions": {
      "type": "object",
      "description": "Any property starting with x- is valid.",
      "patternProperties": {
        "^x-": {
          "$ref": "#/definitions/vendorExtensions"
        }
      }
    },
    "externalDocs": {
      "allOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "description": "information about external documentation",
          "required": [
            "url"
          ],
          "properties": {
            "description": {
              "type": "string"
            },
            "url": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        {
          "$ref": "#/definitions/vendorExtensions"
        }
      ]
    },
    "error": {
      "allOf": [
        {
          "type": "object"
        },
        {
          "$ref": "#/definitions/vendorExtensions"
        }
      ]
    },
    "info": {
      "type": "object",
      "required": [
        "title",
        "version"
      ],
      "properties": {
        "version": {
          "type": "string"
        },
        "contact": {
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "title": {
          "type": "string"
        },
        "license": {
          "properties": {
            "name": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "type": "object"
        },
        "description": {
          "type": "string"
        },
        "termsOfService": {
          "type": "string"
        }
      }
    },
    "server": {
      "allOf": [
        {
          "type": "object",
          "required": [
            "url"
          ],
          "additionalProperties": false,
          "properties": {
            "url": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "summary": {
              "type": "string"
            }
          }
        },
        {
          "$ref": "#/definitions/vendorExtensions"
        }
      ]
    },
    "example": {
      "allOf": [
        {
          "type": "object",
          "required": [
            "name",
            "value"
          ],
          "properties": {
            "summary": {
              "type": "string"
            },
            "value": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object"
                },
                {
                  "type": "array"
                }
              ]
            },
            "description": {
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          }
        }
      ]
    },
    "link": {
      "allOf": [
        {
          "type": "object",
          "properties": {
            "method": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "params": {},
            "server": { 
              "$ref": "#/definitions/server"
            }
          }
        },
        {
          "$ref": "#/definitions/vendorExtensions"
        }
      ]
    },
    "servers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/server"
      }
    },
    "examples": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/example"
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/vendorExtensions"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/link"
      }
    },
    "contentDescriptor": {
      "allOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "schema": {
              "$ref": "#/definitions/schema"
            },
            "examples": {
              "$ref": "#/definitions/examples"
            },
            "required": {	
              "type": "boolean"	
            }
          }
        },
        {
          "$ref": "#/definitions/vendorExtensions"
        }
      ]
    }
  }
}
